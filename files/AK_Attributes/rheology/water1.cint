double tau0 = 0.0;
double kappa = 0.4;
double R = 0.1;
double B = 8.5;



void get_par(
	char s[])
{
	sprintf(s, "kappa=%g R=%g B=%g", kappa, R, B);
}

void set_par(
	char s[])
{
	if(sscanf(s, "kappa=%lf R=%lf B=%lf", kappa, R, B) != 3){
		kappa = 0.4;
		B = 8.5;
		R = 0.1;
	}
}



double tau(
	double p,
	double v,
	double h,
	double d,
	double t,
	double x[3])
{
	double div = h / R;
	if(div < 1.0) div = 1.0;
	div = log(div) / kappa + B;
	return d * v * v / (div * div);
}
